<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hotel_detail_format" model="report.paperformat">
            <field name="name">A4 - statement</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        
        <record id="hotel_room_detail_report" model="ir.actions.report">
            <field name="name">Hotel Detail</field>
            <field name="model">room.history</field>
            <field name="report_type">qweb-html</field>
            <field name="report_file">hotel_management.hotel_report</field>
            <field name="report_name">hotel_management.hotel_report</field>
            <field name="print_report_name">"Hotel Detail"</field>
            <field name="paperformat_id" ref="hotel_management.hotel_detail_format"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
