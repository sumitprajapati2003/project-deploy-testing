<odoo>
    <record id="appointment_reminder_mail_id" model="mail.template">
        <field name="name">Appointment reminder</field>
        <field name="email_from">{{( object.patient_id.email) }}</field>
        <field name="email_to">{{( object.patient_id.email) }}</field>
        <!-- <field name="email_from">'abc@gmail.com'</field>
        <field name="email_to">'abc@gmail.com'</field> -->
        <!-- <field name="model_id" ref="hospital_management.model_res_partner" /> -->
        <field name="model_id" ref="hospital_management.model_appointment_appointment" />
        <field name="subject">Reminder for appointment</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
            <p t-field="object.patient_id.name">Dear </p>
            Your appointment with <strong t-field="object.doctor_id.name" /> is on <strong t-field="object.booking_date" /> at <strongi t-field="object.appointment_time" />
            </div>
        </field>
    </record>
</odoo>