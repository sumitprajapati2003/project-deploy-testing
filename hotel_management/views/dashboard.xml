<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        <record id="hotel_deshbord_kanban" model="ir.ui.view">
                    <field name="name">hotel_deshbord_kanban</field>
                    <field name="model">hotel.room</field>
                    <field name="arch" type="xml">
                        <kanban class="o_kanban_mobile">
                            <field name="name"/>
                            <field name="room_type_id"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_global_click">
                                        <div class="row">
                                            <div class="col-4">
                                                <field name="name"/>
                                                <!-- <field name="room_type_id"/> -->
                                            </div>
                                            <div class='col-6'>
                                             <button name='book_room'  class='oe_highlight btn-success' invisible='state =="check_in"' type='object' string='Check In' context="{'room_status': 'check_in'}" />
                                             <button name='book_room_out'  class='oe_highlight btn-danger'  invisible='state!="check_in"' type='object' string='Check Out' context="{'room_status': 'check_out'}"/>
                                             <field name='state' widget='statusbar' statusbar_visible='check_in,check_out' invisible='1'/>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
            </record>
            <record model="ir.ui.view" id="hotel_deshbord_search">
            <field name="name">hotel_deshbord_search</field>
            <field name="model">hotel.room</field>
                <field name="arch" type="xml">
                    <search string="search">
                        <field name='name'/>
                        <filter string="Check Out" name="state" domain="[('state', '=', 'check_in')]"/>
                        <filter string="Check In" name="state" domain="[('state', '=', 'check_out')]"/>
                        <group expand="0" string="Group By">
                            <filter string="state" name="state" domain="" context="{'group_by':'state'}"/>
                            <filter string="room_type_id" name="room_type_id" domain="" context="{'group_by':'room_type_id'}"/>
                        </group>
                    </search>   
                </field>
        </record>
            <record model="ir.actions.act_window" id="hotel_deshboard_action">
            <field name="name">Deshbord</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.room</field>
            <field name="view_mode">kanban,form,search</field>
            <field name='context'>{'search_default_room_type_id':1}</field>

            
        </record>
    </data>
</odoo>
