<odoo>
    <record id="view_staff_tree" model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <tree position="replace">
                <tree>
                    <field name="name"/>
                    <field name="specialty_ids" widget="many2many_tags"/>
                    <field name="assign_doctor_ids" widget="many2many_tags"/>
                </tree>
           </tree>
        </field>    
    </record>

    <record id="view_staff_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <!-- <field name="is_staff"/>
                <field name="is_doctor"/> -->
            </xpath>
            <xpath expr="//field[@name='function']" position="after">
                <field name="staff_role_id" invisible="not is_staff"/>
                <field name="staff_name" invisible='1'/>    
            </xpath> 
            
            <notebook>
                <page string="Doctor" invisible="not is_doctor">
                    <group col="4">
                        <field name="education" />
                        <field name="qualification" />
                    </group>
                    <group col="4">
                        <field name="specialties_id" />
                        <field name="consultation_fee"/>
                    </group>

                    <group col="4">
                        <field name="is_available" />
                    </group>
                    
                    <group col="4">
                        <field name="age" />
                        <field name="gender" />
                        <field name="marital_status" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="staff_model_action" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('is_staff','=',true),('is_doctor','=',true)]</field>
        <!-- <field name="context">{'default_is_staff': True}</field> -->
    </record>
</odoo>
