<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view  -->
    <record id="view_session_report_wizard_form" model="ir.ui.view">
    <field name="name">session.report.wizard.form</field>
    <field name="model">session.report.wizard</field>
    <field name="arch" type="xml">
        <form string="session wizard">
            <sheet>
                <group>
                    <!-- <field name="session_list_ids" widget="many2many_tags"/> -->
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
                
                <footer>
                    <button name="create_report" string="create report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </sheet>
        </form>
    </field>
    </record>

    <record id="action_session_report_wizard_window" model="ir.actions.act_window">
        <field name="name">Create report</field>
        <field name="res_model">session.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_session_report_wizard_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="training_and_placement.model_session_session" />
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>
