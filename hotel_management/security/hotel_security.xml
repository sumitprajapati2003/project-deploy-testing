    <record id="receptionist_record_rule_room_history" model="ir.rule">
        <field name="name"> receptionist Record Rule</field>
        <field name="model_id" ref="model_room_history"/>
        <field name='groups' eval='[(4,ref("hotel_management.group_receptionist"))]'/>
    </record> 
    <record id="all_record_rule_hotel_room_history" model="ir.rule">
        <field name="name">All Record Rule</field>
        <field name="model_id" ref="model_room_history"/>
        <field name='groups' eval='[(4,ref("hotel_management.group_admin_hotel"))]'/>
    </record> 

    
</odoo>