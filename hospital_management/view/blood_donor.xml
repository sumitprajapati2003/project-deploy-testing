<odoo>
    <record id="view_blood_donor_tree" model="ir.ui.view">
        <field name="name">blood.donor.tree</field>
        <field name="model">blood.donor</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="blood_group"/>
            </tree>
        </field>    
    </record>

    <record id="view_blood_donor_form" model="ir.ui.view">
        <field name="name">blood.donor.form</field>
        <field name="model">blood.donor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age" />
                    </group>
                    <group>
                        <field name="blood_group"/>
                        <field name="quantity"/>
                    </group>
                    <group>
                        <field name="gender" />
                        <field name="date" />
                        <field name="medical_history"/>
                        <!-- <field name="donor_id" /> -->
                    </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="blood_donor_action" model="ir.actions.act_window">
        <field name="name">Donor</field>
        <field name="res_model">blood.donor</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>