<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- form view  -->
    <record id="view_trainee_form" model="ir.ui.view">
    <field name="name">trainee.trainee.form</field>
    <field name="model">trainee.trainee</field>
    <field name="arch" type="xml">
        <form string="trainee">
            <sheet>
                <field name="image" widget="image" class="oe_avatar"/>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>  
                        <field name="course_id"/>
                        <field name="store_fname" invisible="1" />
                        <field name="resume" filename="store_fname"/>
                    </group>
                </group>
            </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
        </form>
    </field>
    </record>

    <!-- tree view  -->
    <record id="view_trainee_tree" model="ir.ui.view">
    <field name="name">trainee.trainee.tree</field>
    <field name="model">trainee.trainee</field>
    <field name="arch" type="xml">
        <tree string="trainee">
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="course_id"/>
        </tree>
    </field>
    </record>

    <!-- action  -->
      <record id="action_trainee" model="ir.actions.act_window">
            <field name="name">Trainee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trainee.trainee</field>
            <field name="view_mode">tree,form</field>

        </record>
    </data>
</odoo>