<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mail_template_sell_buy" model="mail.template">
            <field name="name">sell/buy mail</field>
            <field name="model_id" ref="car_dealers_management.model_sell_buy" />
            <field name="subject">Buy car email</field>
            <field name="email_from">{{object.partner_id.email}}</field> 
            <field name="email_to">{{object.customer_email}}</field>
            <!-- <field name="report_template_ids" eval="[(4, ref('building_managaments.action_report_offices'))]"/> -->
            <!-- <field name="lang">{{ object.name }}</field> -->
            <!-- <field name="auto_delete" eval="True"/> -->
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <t t-out="object.partner_id.name"></t><br/>
                    <t t-out="object.fleet_id.name"/><br/>
                    <t t-out="object.customer_price"/><br/>
                    <t t-out="object.fuel_type"></t><br/><br/>
                    Dear <t t-out="object.partner_id.name"></t><br/>
                    <p>You have Successfully purchased a car. car model is <t t-out="object.fleet_id.name">.</t></p>
                </div> 
            </field>
        </record>
    </data>
</odoo>    