<odoo>
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <tree position="replace">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="blood_group"/>
                    <field name="disease_ids" widget="many2many_tags"/>
                    <field name="primary_doctor_id"/>
                </tree>
           </tree>
        </field>    
    </record>

    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_staff" />
                <field name="is_doctor" />
            </xpath>
            <xpath expr="//field[@name='function']" position="after">
                <!-- <button id="send_mail_id" name="action_send_email_with_temp" string="Send mail" type="object"/> -->
                <!-- <field name="staff_role_id" invisible="not is_staff"/>
                <field name="staff_name" invisible='1'/>     -->
            </xpath> 
            
            <!-- <notebook>
                <page string="Doctor Background" invisible="not is_doctor">
                    <group col="4">
                        <field name="education" />
                        <field name="qualification" />
                    </group>
                    <group col="4">
                        <field name="specialties_id" />
                        <field name="consultation_fee"/>
                    </group>

                    <group col="4">
                        <field name="is_available" />
                    </group>
                </page>
            </notebook> -->

            <notebook>
                <page string="Patient Information" invisible="is_staff or is_doctor">
                    <group col="4">
                        <field name="specialty_ids" widget="many2many_tags" />
                        <field name="disease_ids" widget="many2many_tags" />
                        <field name="primary_doctor_id" />
                        <field name="assign_doctor_ids" widget="many2many_tags" />
                    </group>
                    <group col="4">
                        <field name="blood_group" />
                        <field name="admit_date" />
                        <field name="discharge_date" />
                    </group>
                    <group col="4">
                        <field name="medical_history" />
                        <field name="allergies" />
                    </group>
                    <group col="4">
                        <field name="insurance_provider" />
                        <field name="insurance_id" />
                    </group>
                </page>

                <page string="Additional Information">
                    <group col="4">
                        <field name="age" />
                        <field name="gender" />
                        <field name="marital_status" />
                        <field name="occupation"/>
                        <!-- <field name="occupation" invisible="is_staff or is_doctor"/> -->
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="member_model_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <!-- <field name="res_model">hm.patient</field> -->
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('is_staff','=',false),('is_doctor','=',false)]</field>
        <!-- <field name="context">{'readonly_is_staff': True,'readonly_is_doctor': True}</field> -->

    </record>
</odoo>
