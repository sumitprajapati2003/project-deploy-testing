<odoo>
    <record id="view_blood_request_tree" model="ir.ui.view">
        <field name="name">blood.request.tree</field>
        <field name="model">blood.request</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="blood_group"/>
                <field name="quantity"/>
                <field name="state"/>
            </tree>
        </field>    
    </record>

    <record id="view_blood_request_form" model="ir.ui.view">
        <field name="name">blood.request.form</field>
        <field name="model">blood.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button  id="button_draft" name="action_draft" string="Draft" type="object"
                    class="btn-primary"/>
                    <button id="button_requested" name="action_requested" string="Requested" type="object"
                    class="btn-primary"/>
                    <button id="button_fullfilled" name="action_fulfilled" string="Fulfilled" type="object" class="btn-primary"/>
                    <button id="button_cancelled" name="action_cancelled" string="Cancelled" type="object" class="btn-primary"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,fulfilled,cancelled" />
                    <!-- <field name="state" widget="statusbar" statusbar_visible="draft,requested,fulfilled,cancelled" type="object" options="{'clickable':1}" statusbar_click="{'cancelled': 'action_on_state_cancelled'}" /> -->
                       <!-- options="{'clickable':1}" -->
                </header>
                <sheet>
                    <widget name="web_ribbon" text="Draft" bg_color="bg-secondary"    
                        invisible="not state == 'draft'" />
                    <widget name="web_ribbon" text="Requested" bg_color="bg-info"
                        invisible="not state == 'requested'" />
                    <widget name="web_ribbon" text="Fulfilled" bg_color="bg-success"
                        invisible="not state == 'fulfilled'"/>
                    <widget name="web_ribbon" text="Cancelled" bg_color="bg-danger"
                        invisible="not state == 'cancelled'"/>
                    <group>
                        <field name="patient_id"/>
                        <field name="blood_group"/>
                        <field name="quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="blood_request_action" model="ir.actions.act_window">
        <field name="name">Blood Request</field>
        <field name="res_model">blood.request</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>