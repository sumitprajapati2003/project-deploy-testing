<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hotel_amenities_group_view_tree" model="ir.ui.view">
            <field name="name">Room Amenities</field>
            <field name="model">hotel.amenities.group</field>
            <field name="arch" type="xml">
                <tree string="Amenities List" >
                    <field name="name"/>
                </tree>
            </field>
        </record> 
        <record id="hotel_amenities_group_view_form" model="ir.ui.view">
            <field name="name">Room Amenities</field>
            <field name="model">hotel.amenities.group</field>
            <field name="arch" type="xml">
                <form string="Amenities Detail">  
                    <sheet>
                        <group>
                              <field name="name"/>
                        </group>   
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hotel_amenities_group_action">
            <field name="name">Room Amenities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.amenities.group</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name='context'>{'search_default_age':0}</field> -->
        </record>


    </data>
</odoo>  