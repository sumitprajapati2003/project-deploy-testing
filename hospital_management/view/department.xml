<odoo>
    <record id="view_zydus_staff_tree" model="ir.ui.view">
        <field name="name">hm.department.tree</field>
        <field name="model">hm.department</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>    
    </record>

    <record id="view_zydus_staff_form" model="ir.ui.view">
        <field name="name">hm.department.form</field>
        <field name="model">hm.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="department_model_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hm.department</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>