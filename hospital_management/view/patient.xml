    <record id="view_form_patient" model="ir.ui.view">
        <field name="name">Patient Form</field>
        <field name="model">hm.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <!-- <header>
                    <button name="save" type="save" string="Save"/>
                    <button name="cancel" type="cancel" string="Cancel"/>
                </header> -->
                <sheet>
                    <group>
                        <group col="4">
                            <field name="patient_id" readonly='1'/>
                            <field name="patient_name" />
                            <field name="patient_age" />
                            <field name="patient_gender" />
                        </group>
                        <group col="4">
                            <field name="patient_address" />
                            <field name="phone" />
                            <field name="email" />
                        </group>
                    </group>
                    <group>
                        <group col="4">
                            <field name="specialty_ids" widget="many2many_tags" />
                            <field name="disease_ids" widget="many2many_tags" />
                            <field name="assign_doctor_ids" widget="many2many_tags" />
                        </group>
                        <group col="4">
                            <field name="admit_date" />
                            <field name="discharge_date" />
                            <field name="blood_group" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Medical History">
                            <group col="4">
                                <field name="medical_history" />
                                <field name="allergies" />
                            </group>
                        </page>
                        <page string="Insurance Information">
                            <group col="4">
                                <field name="insurance_provider" />
                                <field name="insurance_id" />
                            </group>
                        </page>
                        <page string="Next of Kin">
                            <group col="4">
                                <field name="next_of_kin_name" />
                                <field name="next_of_kin_relationship" />
                                <field name="next_of_kin_phone_number" />
                            </group>
                        </page>
                        <page string="Additional Information">
                            <group col="4">
                                <field name="marital_status" />
                                <field name="occupation" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_zydus_patient_search" model="ir.ui.view">
        <field name="name">hm.patient.search</field>
        <field name="model">hm.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_name"/>
                <field name="patient_age"/>
                <filter string="Male" name="filter_by_gender" domain="[('patient_gender','=','male')]"></filter>
                <!-- <separator/> -->
                <filter string="Female" name="filter_by_gender" domain="[('patient_gender','=','female')]"></filter>

                <group expand="0" string="Group by">
                    <filter string="Gender" name="group_by_gender" context="{'group_by':'patient_gender'}"></filter>
                </group>
            </search>
        </field>
    </record>

    <record id="patient_model_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <!-- <field name="res_model">hm.patient</field> -->
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[()]</field>
    </record>

</odoo>